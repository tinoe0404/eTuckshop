PORT=5000
NODE_ENV=development

# Database (Supabase PostgreSQL)
DATABASE_URL="postgresql://user:password@host:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://user:password@host:5432/postgres"

# URLs
CLIENT_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000/api

# Auth Secrets
ACCESS_TOKEN_SECRET=your_access_token_secret_here
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
QR_SIGNING_SECRET=your_qr_signing_secret_here

# Redis (Upstash)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here

# PayNow Payment Gateway (Zimbabwe)
PAYNOW_INTEGRATION_ID=your_integration_id
PAYNOW_INTEGRATION_KEY=your_integration_key
PAYNOW_WEBHOOK_SECRET=your_webhook_secret

# ==============================
# WhatsApp Cloud API (Meta)
# ==============================

# Get these from: https://developers.facebook.com/apps
# 1. Create a WhatsApp Business App
# 2. Go to WhatsApp > API Setup

# Access Token (from Meta for Developers > WhatsApp > API Setup)
# Format: EAAxxxxxxxxxxxxxxxxxxxx
WHATSAPP_ACCESS_TOKEN=your_meta_access_token_here

# Phone Number ID (from WhatsApp > API Setup > Phone Number ID)
# Format: 123456789012345
WHATSAPP_PHONE_ID=your_phone_number_id_here

# Verify Token (you create this yourself - any random string)
# This is used for webhook verification when setting up the webhook URL
# Example: my_super_secret_verify_token_12345
WHATSAPP_VERIFY_TOKEN=your_custom_verify_token_here

# App Secret (from Meta for Developers > App Settings > Basic > App Secret)
# Optional but recommended for webhook signature verification
# Format: abc123def456...
WHATSAPP_APP_SECRET=your_app_secret_here

# API Version (optional, defaults to v18.0)
WHATSAPP_API_VERSION=v18.0
